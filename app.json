{
  "expo": {
    "name": "BookTracker",
    "slug": "booktracker",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/book-tracker-logo-dark.png",
    "scheme": "booktracker",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "Track your reading progress with BookTracker. Sync with Plex to automatically discover audiobooks and track your reading speed and completion percentage.",
    "keywords": ["books", "reading", "tracker", "audiobooks", "plex", "library"],
    "privacy": "public",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.scotystobbe.booktracker",
      "appStoreUrl": "https://apps.apple.com/app/booktracker/id1234567890",
      "buildNumber": "2",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
                    "NSAppTransportSecurity": {
              "NSAllowsArbitraryLoads": true,
              "NSAllowsArbitraryLoadsInWebContent": true,
              "NSAllowsLocalNetworking": true,
              "NSExceptionDomains": {
                "69.162.238.198": {
                  "NSExceptionAllowsInsecureHTTPLoads": true,
                  "NSExceptionMinimumTLSVersion": "1.0",
                  "NSExceptionRequiresForwardSecrecy": false
                }
              }
            },
        "NSLocalNetworkUsageDescription": "This app needs access to your local network to connect to your Plex Media Server for book discovery and progress syncing."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "e2711538-737e-4348-90c5-7a1170b48bcb"
      }
    }
  }
}
